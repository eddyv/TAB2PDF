package com.drawpdf.drawoutput;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;

import com.itextpdf.text.Document;
import com.itextpdf.text.DocumentException;
import com.itextpdf.text.Rectangle;
import com.itextpdf.text.pdf.PdfContentByte;
import com.itextpdf.text.pdf.PdfWriter;

public class TestArc
{

	public static void main(String[] args) throws FileNotFoundException, DocumentException
	{
		Rectangle pageSize = new Rectangle(612, 792);
		Document document = new Document(pageSize);
		PdfWriter writer = PdfWriter.getInstance(document, new FileOutputStream("testArc1.pdf"));
		document.open();

		// create Symbol object and canvas to draw on
		//Symbol drawSymbol = new Symbol(SIZEY);
		PdfContentByte canvas = writer.getDirectContent();
		
		createArc(canvas,100,0,300,200,5);
		createArc(canvas,400,0,600,300,5);
		canvas.rectangle(100, 0, 200, 200);
		canvas.stroke();
		canvas.rectangle(400, 0, 200, 200);
		canvas.stroke();
		document.close();
	}
	public static void createArc(PdfContentByte canvas, float x1, float y1, float x2, float y2, float size)
	{
		canvas.arc(x1, y1, x2, y2, 0, 180);
		canvas.stroke();
	}

}
